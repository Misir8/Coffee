@model ContactViewModel;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = Localizer["Contact"];
    Layout = "_Layout";
}

@section Style
{
    <style>
        .google-map {
            margin-top: 50px;
        }

        body {
            overflow-x: hidden;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        }

        .validation {
            color: red !important;
        }
    </style>
}
<div id="tp-page-header" class="tp-page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>@Localizer["Contact"]</h1>
            </div>
        </div>
    </div>
</div>
<div id="tp-breadcrumb" class="tp-breadcrumb">
    <!-- breadcrumb -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb">
                    <li><a asp-controller="Home" asp-action="Index">@Localizer["Home"]</a></li>
                    <li class="active">@Localizer["Contact"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- /.breadcrumb -->
<div id="main-container" class="main-container" style="padding-bottom:0;">
    <!-- main container -->
    <div id="tp-contact-us" class="tp-contact-us">
        <!-- contact us -->
        <div class="container">
            <div class="row">
                <!-- contact -->
                <div class="col-md-8 left-sidebar">
                    <!-- left sidebar -->
                    <div class="row">
                        <div class="col-md-12">
                            <partial name="_NotificationSuccessPartial" />
                            <h1>@Localizer["WriteToUs"]</h1>
                        </div>
                        <div class="clearfix"></div>
                        <div class="contact-form">
                            <!-- contact form -->
                            <form id="contact-form" method="post" asp-controller="Contact" asp-action="Index">
                                <!-- Text input-->
                                <input type="hidden" name="ss_token" value="d199e610a1ff45ace1ed5662df38d723">                                    <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label" for="name">@Localizer["Firstname"]</label>
                                        <input asp-for="Firstname" type="text" class="form-control">
                                        <span class="validation" asp-validation-for="Firstname"></span>
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label" for="phone">@Localizer["Phone"]</label>
                                        <input asp-for="Number" type="text" class="form-control form-element">
                                        <span class="validation" asp-validation-for="Number"></span>
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label" for="email">@Localizer["Email"]</label>
                                        <input asp-for="Email" type="text" class="form-control form-element">
                                        <span class="validation" asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <!-- textarea -->
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label" for="message">@Localizer["Message"]</label>
                                        <textarea class="form-control form-element" rows="7" asp-for="Message"></textarea>
                                        <span class="validation" asp-validation-for="Message"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-default">@Localizer["Send"]</button>
                                </div>
                            </form>
                        </div>
                        <!-- /.contact form -->
                    </div>
                </div>
                <!-- /.left sidebar -->
                <div class="col-md-4 right-sidebar">
                    <!-- right sidebar -->
                    <div class="row">
                        <div class="col-md-12">
                            <!-- block -->
                            <div class="widget">
                                <div class="tp-bg-border tp-bg-box">
                                    <!-- bg border -->
                                    <h2>@Localizer["Address"]</h2>
                                </div>
                                <!-- /.bg border -->
                                <div class="tp-bg-box">
                                    <!-- bg box -->
                                    <address>
                                        <div class="add">
                                            @await Component.InvokeAsync("Address")    <br>
                                        </div>

                                        <div class="phone"><strong>@Localizer["Phone"]: </strong>  @await Component.InvokeAsync("Number") </div>
                                        <div class="mailto"><strong>@Localizer["Email"] :</strong> @await Component.InvokeAsync("Email")   </div>

                                    </address>
                                    <div class="social-icon">
                                        <strong>@Localizer["FollowUs"]</strong>
                                        <br>
                                        <a href="https://www.facebook.com/ShamFiLLC/" target="_blank"><i class="fa fa-facebook"></i></a><a href="https://www.linkedin.com/company/sham-fi-international-trading-company/" target="_blank"><i class="fa fa-linkedin"></i></a><a href="https://www.instagram.com/shamfi.mmc/" target="_blank"><i class="fa fa-instagram"></i></a>
                                    </div>
                                </div>
                                <!-- /.bg box -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.right sidebar -->
            </div>
            <!-- /.contact -->
        </div>
    </div>

    <div class="google-map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2336.7336248664624!2d49.65883076470151!3d40.57761870370369!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x403096dcd0923f6b%3A0xdf4767c369322a71!2z0KHRg9C80LPQsNC40YIsINCQ0LfQtdGA0LHQsNC50LTQttCw0L0!5e0!3m2!1sru!2s!4v1581575860720!5m2!1sru!2s" frameborder="0" style="border:0;width: 100vw;height: 500px" allowfullscreen=""></iframe>

    </div>
    <!-- /.location -->
</div>
@section Script
{
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"
            asp-fallback-src="~/lib/jquery-validation/dist/jquery.validate.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"
            asp-fallback-src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive">
    </script>
    <script src="https://cdn.ckeditor.com/ckeditor5/12.4.0/classic/ckeditor.js"></script>
    <script>
        var inputForms = document.querySelectorAll('.form-element');
        window.addEventListener("load", function () {
            for (var i = 0; i < inputForms.length; i++) {
                inputForms[i].value = "";
            }
        });
        var alertNotification = document.querySelector(".alert");
        if (alertNotification != null) {
            setTimeout(function () {
                alertNotification.remove()
            }, 5000)
        }
    </script>
}
