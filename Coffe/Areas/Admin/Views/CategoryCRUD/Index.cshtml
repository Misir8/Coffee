@model IEnumerable<Category>;
@{
    ViewBag.Title = "Kateqoriya";
    Layout = "_Layout";
}

@section Styles
{
    <style>
        img{
            height: 100px;
            width: 100px;
            object-fit: cover;
        }
        td{
            text-align: center;
            vertical-align: middle !important;
        }
    </style>
}


<div class="col-md-12">
    <div class="card">
        <a asp-action="create" class="btn btn-outline-primary btn-block">Yeni Kateqoriya Əlavə Et</a>
        <div class="card-header">
            <strong class="card-title">Kateqoriyalar</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Şəkil</th>
                    <th>Ad</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td><img src="~/img/@category.Image" alt="slider"></td>
                        <td>@category.Name</td>
                        <td>
                            <a asp-action="edit" asp-route-id="@category.Id" class="btn-warning btn">Dəyiş</a>
                            <a asp-action="delete" asp-route-id="@category.Id" class="btn-danger btn">Sil</a>
                            <a asp-action="details" asp-route-id="@category.Id" class="btn-info btn">Ətraflı</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

