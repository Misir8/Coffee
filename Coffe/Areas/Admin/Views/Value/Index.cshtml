@model System.Collections.Generic.List<Coffe.Models.Value>

@{
    ViewBag.Title = "Value";
    Layout = "_Layout";
}

@section Styles
{
    <style>
        img{
            height: 100px;
            width: 100px;
            object-fit: cover;
        }
        td{
            text-align: center;
            vertical-align: middle;
        }
    </style>
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Dəyərlərimiz</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Dəyərlərimiz</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var value in Model)
                {
                    <tr>
                        <td>@Html.Raw(value.Description)</td>
                        <td>
                            <a asp-action="edit" asp-route-id="@value.Id" class="btn-warning btn">Dəyiş</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
