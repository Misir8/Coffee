@model System.Collections.Generic.List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Roles";
    Layout = "_Layout";
}


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Rolların siyahısı</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                <button type="submit" class="btn btn-danger">
                                    Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </table>
            <a class="btn btn-primary" asp-action="Create">Rol Əlavə Et</a>
            <a class="btn btn-dark" asp-action="UserList">İstifadəçilərin Siyahısı</a>
        </div>
    </div>
</div>