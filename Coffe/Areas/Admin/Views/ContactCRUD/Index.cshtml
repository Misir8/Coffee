@model IEnumerable<Contact>

@{
    ViewBag.Title = "Kontakt Mesajları";
    Layout = "_Layout";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Kontakt mesajları</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Ad soyad</th>
                    <th>Telefon</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var contact in Model)
                {
                    <tr>
                        <td>
                            @contact.Firstname
                        </td>
                        <td>
                            @contact.Number
                        </td>
                        <td>
                            @contact.Email
                        </td>
                        <td>
                            <a asp-action="details" asp-route-id="@contact.Id" class="btn btn-primary">Ətraflı</a>
                            <a asp-action="delete" asp-route-id="@contact.Id" class="btn-danger btn">Sil</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
