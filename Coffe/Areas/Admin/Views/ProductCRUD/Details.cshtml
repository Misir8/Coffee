@model Product

@{
    ViewBag.Title = "Product Details";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <div class="card">
            <img class="card-img-top" src="~/img/@Model.Image" alt="slider">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <a asp-action="Index" class="btn btn-primary">Geri qayıt</a>
            </div>
        </div>
    </div>
    <div class="col-2"></div>
</div>
