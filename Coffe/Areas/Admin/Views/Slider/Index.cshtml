@model IEnumerable<Coffe.Models.Slider>;

@{
    ViewBag.Title = "Slider";
    Layout = "_Layout";
}

@section Styles
{
    <style>
        img{
            height: 100px;
            width: 100px;
            object-fit: cover;
        }
        td{
            text-align: center;
            vertical-align: middle !important;
        }
    </style>
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Slayder</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Şəkil</th>
                    <th>Başlıq</th>
                    <th>İkinci Başlıq</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var slider in Model)
                {
                    <tr>
                        <td><img src="~/img/@slider.Image" alt="slider"></td>
                        <td>@slider.Title</td>
                        <td>@slider.Subtitle</td>
                        <td>
                            <a asp-action="edit" asp-route-id="@slider.Id" class="btn-warning btn">Dəyiş</a>
                            <a asp-action="details" asp-route-id="@slider.Id" class="btn-info btn">Ətraflı</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
