@model System.Collections.Generic.List<Coffe.Models.About>

@{
    ViewBag.Title = "About";
    Layout = "_Layout";
}



@section Styles
{
    <style>
        img{
            height: 100px;
            width: 400px;
            object-fit: cover;
        }
        td{
            text-align: center;
            vertical-align: middle !important;
        }
    </style>
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Biz Kimik?</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Şəkil</th>
                    <th>Başlıq</th>
                    <th>Mətn</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var about in Model)
                {
                    <tr>
                        <td>
                            <img src="~/img/@about.Image" alt="about">
                        </td>
                        <td>
                            @about.Description
                        </td>

                        <td>
                            <a asp-action="edit" asp-route-id="@about.Id" class="btn-warning btn">Dəyiş</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>